{
  "name": "vue-clerk-monorepo",
  "private": true,
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "turbo run build && changeset publish",
    "clean": "find . \\( -name '.turbo' -o -name 'dist' \\) -type d -prune -exec rm -rf {} +",
    "clean:nm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@antfu/eslint-config": "^2.21.2",
    "eslint": "^9.6.0",
    "turbo": "^2.1.1",
    "typescript": "^5.5.2"
  }
}
